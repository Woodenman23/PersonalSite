{% extends "layout.html.j2" %}
{% block title %} Gallery {% endblock %}
{% block content %}
<style>
    .image-container {
        width: 300px;    
        height: 300px;   
        overflow: hidden; 
    }
    .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: top left;
            transition: transform 0.3s ease; /* Add transition for smooth hover effect */
    }
    .image-container:hover img {
            transform: scale(1.2); /* Increase the size of the image on hover */
    }
</style>


<div class="container">
    <h1 class="text-center my-4">Photo Gallery</h1>
<div class="row">
    {% for image in images %}
        <div class="col-md-4 mb-4">
            <a href="{{ url_for('views.ask') }}">
                <div class="image-container">
                    <img src="{{ url_for('static', filename='images/' ~ image ) }}" class="img-fluid" alt="Image">
                </div>
            </a>
        </div>
    {% endfor %} 
</div>

{% endblock %}
