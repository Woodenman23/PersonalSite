{% extends "layout.html.j2" %}
{% block title %}{{ country }}{% endblock %}
{% block content %}
<style>
    .image-container {
        width: 300px;    
        height: 300px;   
        overflow: hidden; 
    }
    .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: top left;
            transition: transform 0.3s ease; /* Add transition for smooth hover effect */
    }
    .image-container:hover img {
            transform: scale(1.2); /* Increase the size of the image on hover */
    }
</style>
<div class="container">
        <img src="{{ flag_url }}" class="d-block mx-auto mt-5 mb-5" alt="Flag Image">
</div>
<div class="container">
    <p>{{ country_info }}</p>
</div>

<div class="container">
<div class="row">
    {% for image in images %}
        <div class="col-md-4 mb-4">
            <a href="{{ url_for('views.ask') }}">
                <div class="image-container">
                    <img src="{{ url_for('static', filename='images/' ~ image ) }}" class="img-fluid" alt="Image">
                </div>
            </a>
        </div>
    {% endfor %} 
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 mb-6">
            <a href={{ advice_url }}><h2>Travel Advice</h2></a>
        </div>
        <div class="col-md-6 mb-6">
            <a href="{{url_for('views.travel')}}"><h2>Back to Countries</h2></a>
        </div>
    </div>
</div>

{% endblock %}